{
  "name": "tarcioscope-ui",
  "version": "1.0.0",
  "description": "UI for tarcioscope",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "CAMERA_SERVER_HOST=gopdopspi CAMERA_SERVER_PORT=80 parcel build ./src/index.html --public-url ./ --no-cache",
    "start": "CAMERA_SERVER_HOST=gopdopspi CAMERA_SERVER_PORT=80 parcel ./src/index.html",
    "ci": "npm run lint && npm t",
    "lint": "standard ./src",
    "test": "jest --detectLeaks --bail"
  },
  "author": "Tarcio Saraiva <tarcio@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.13",
    "autoprefixer": "^8.1.0",
    "babel-jest": "^22.4.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "css-loader": "^0.28.11",
    "jest": "^22.4.2",
    "jest-serializer-vue": "^1.0.0",
    "parcel-bundler": "^1.7.0",
    "parcel-plugin-vue": "^1.5.0",
    "postcss-nested": "^3.0.0",
    "postcss-simple-vars": "^4.1.0",
    "rimraf": "^2.6.2",
    "standard": "^11.0.0",
    "vue-jest": "^2.1.1",
    "vue-template-compiler": "^2.5.15",
    "weak": "^1.0.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.5",
    "@fortawesome/fontawesome-free-solid": "^5.0.9",
    "@fortawesome/vue-fontawesome": "0.0.22",
    "axios": "^0.18.0",
    "lodash.throttle": "^4.1.1",
    "normalize.css": "^8.0.0",
    "vue": "^2.5.15",
    "vue-progressbar": "^0.7.4",
    "vuex": "^3.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,vue}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "html",
      "text-summary"
    ]
  }
}
